<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       
                    xmlns:local="clr-namespace:Zadanie___wpf">
    <Style TargetType="Button">
        <Setter Property="Background" Value="Red" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="White" />
		<Setter Property="FontStyle" Value="Italic" />

	</Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF41D33A" />
        <Setter Property="FontFamily" Value="Arial" />
    </Style>

    <Style TargetType="Menu">
        <Setter Property="Background" Value="#FF7F0DDE" />
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="Foreground" Value="#FFEA0F0F" />
    </Style>


    <Style TargetType="Grid">
        <Setter Property="Background" Value="#FFEA860F" />
    </Style>

   


</ResourceDictionary>